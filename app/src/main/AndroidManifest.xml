<?xml version="1.0" encoding="utf-8"?>
<manifest package="su.whs.watl.samples"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".wATLApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_justify"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TextViewWSActivity"
            android:label="@string/title_activity_text_view_ws"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".TextViewExScrollActivity"
            android:label="@string/title_activity_text_view_ex_scroll"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".HyphenTextViewExActivity"
            android:label="@string/title_activity_hyphen_text_view_ex"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".AnotherHyphenTextViewExActivity"
            android:label="@string/title_activity_another_hyphen_text_view_ex"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".MultiColumnTextViewExActivity"
            android:label="@string/title_activity_multi_column_text_view_ex"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".ViewPagerActivity"
            android:label="@string/title_activity_view_pager"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".AnimationActivity"
            android:label="Sample Animation"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity
            android:name=".RTLTestActivity"
            android:label="RTL Test"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="su.whs.watl.samples.MainActivity"/>
        </activity>
        <activity android:name=".RecyclerViewActivity"
                  android:label="@string/title_activity_large_list"
                  android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>